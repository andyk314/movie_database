
<%= render 'nav_show' %>

<h3 class="actornameshow"><%= @actor.name.upcase %></h3>
<div class="show_top_container">
<div class="imagewrapper"><img src="http://image.tmdb.org/t/p/original<%= @actor.picture %>"/></div>


<section class="quote">
  "<%= @actor.quote %>"
</section>
</div>
<!-- <div id="triangle_down1"></div> -->

<div class="stripe">
  <section class="bio">
    <div id="talkbubble1">ACTOR FUN FACTS!!!</div>
    <%= truncate(@actor.bio, length: 500, omission: '...(more)') %>
  </section>
</div>

<!-- Rotten Tomatoes top and bottom critics score lists -->
<div class="stripe">  
  <aside>
    <ol>
      <h3 class="list_header">Top Fresh Movies</h3>
      <li><p><%= @newest[0].title %> - <%#= @newest[0].freshness %>%</p></li>
      <li><p><%= @newest[1].title %> - <%#= @newest[1].freshness %>%</p></li>
      <li><p><%= @newest[2].title %> - <%#= @newest[2].freshness %>%</p></li>
    </ol>
    <ol>
      <h3 class="list_header">Bottom Rotten Movies</h3>
      <li><p><%= @oldest[0].title %> - <%#= @oldest[0].freshness %>%</p></li>
      <li><p><%= @oldest[1].title %> - <%#= @oldest[1].freshness %>%</p></li>
      <li><p><%= @oldest[2].title %> - <%#= @oldest[2].freshness %>%</p></li>
    </ol>
  </aside>
</div>
  <div id="triangle_down1"></div><!--  triangle at bottom of div -->
  <!-- arrow point to Rotten Tomatoe Lists -->
  <div id="talkbubble2">ROTTEN TOMATES INFO!!!</div>

<!-- header for boxx office D3 bar chart -->
<div class="chart_header"><h3>BOX OFFICES GROSSES</h3>
<!-- d3 box office bar chart -->
  <div class="chart"></div>
    <div class="btn_contain">
      <div class="bar_btns">
        <button type="button" class="btn btn-default" id="total">Total</button>
        <button type="button" class="btn btn-default" id="domestic">Domestic</button>
        <button type="button" class="btn btn-default" id="international">International</button>
      </div>
      <div id="triangle_down2"></div> <!--  triange at bottom of div -->
    </div>
</div>
<!-- D3 pie chart for budgets -->

<div class="pie_chart">
  <h2 class="budget_header">Movie Budgets</h2>
</div>
<div class="budget_btns">
  <div class="radio">
    <input type="radio" name="dataset" value="topData" checked><label>Highest Budget</label>
  </div>
  <div class="radio">
    <input type="radio" name="dataset" value="botData"><label>Lowest Budget</label>
  </div>
</div>

<script>
window.d3_url = '<%= actor_path(@actor, format: 'json') %>';
toggle_total();
pieChart();
</script>


