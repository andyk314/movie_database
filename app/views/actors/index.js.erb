// Actor search
<% if params[:search] %>
  $("#actors-search-section").html('<%= j render partial: "actors_search_section" %>');
<% end %>

// Endless scroll pagination
<% if params[:page] %>
	$('#actors-search-section').append('<%= j render partial: "actors_search_section" %>');
	<% if @actors.next_page %>
	  $('.pagination').replaceWith('<%= j will_paginate(@actors) %>');
	<% else %>
	  // $(window).off('scroll');
	  $('.pagination').remove();
	<% end %>
	<% sleep 1 %>
<% end %>

